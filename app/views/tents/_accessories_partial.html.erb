<%= render :partial => 'price_advisory',:locals =>{:place => "top"}%>

<% Accessories::Types.each do |type_key, type_name| %>
	<h2><%= type_name %></h2>
	<ul>
		<% Accessories.where(accessory_type: type_key.to_s).each do |a| %>
			<li>
				<%= a.name %> - <%= number_to_currency(a.price, :unit => "$") %>/<%= a.price_unit %>
			</li>
		<% end %>
	</ul>
<% end %>
<%= render :partial => 'price_advisory'%>

